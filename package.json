{
	"name": "leap",
	"displayName": "leap",
	"description": "An improved keyboard interface for web developers",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Leap",
			"properties": {
				"leap.mode": {
					"enum": [
						"edit",
						"select"
					],
					"default": "edit",
					"description": "The current mode of the leap keybindings"
				}
			}
		},
		"commands": [
			{
				"command": "leap.toggleMode",
				"title": "Leap: toggle mode"
			}
		],
		"keybindings": [
			{
				"key": "capslock",
				"command": "leap.toggleMode"
			},
			{
				"key": "i",
				"command": "cursorUp",
				"when": "textInputFocus && leap.mode == 'select'"
			},
			{
				"key": "l",
				"command": "cursorRight",
				"when": "textInputFocus && leap.mode == 'select'"
			},
			{
				"key": "k",
				"command": "cursorDown",
				"when": "textInputFocus && leap.mode == 'select'"
			},
			{
				"key": "j",
				"command": "cursorLeft",
				"when": "textInputFocus && leap.mode == 'select'"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}